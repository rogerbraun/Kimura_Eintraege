.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:entries, :index)
      %li=link_to pat(:new), url(:entries, :new)
      %li.active=link_to pat(:edit), url(:entries, :edit, :id => @entry.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:entry)
    .inner
      -form_for :entry, url(:entries, :update, :id => @entry.id), :method => :put, :class => :form do |f|
        =partial "entries/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")